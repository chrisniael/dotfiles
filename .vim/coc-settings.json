{
    "languageserver": {
        "ccls": {
            "enable": false,
            "command": "ccls",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                ".ccls",
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "initializationOptions": {
                "cache": {
                    "directory": "/tmp/ccls"
                }
            }
        },
        "clangd": {
            "enable": true,
            "command": "clangd",
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "rootPatterns": [
                "compile_commands.json",
                ".vim/",
                ".git/",
                ".hg/"
            ],
            "args": [
                "-background-index"
            ]
        },
        "bash": {
            "enable": true,
            "command": "bash-language-server",
            "args": ["start"],
            "filetypes": ["sh"],
            "ignoredRootPaths": ["~"]
        }
    },
    "list.insertMappings": {
        "<C-n>": "normal:j",
        "<C-p>": "normal:k"
    },
    "coc.preferences.formatOnSaveFiletypes": ["c", "cpp"],
    "markdownlint.config": {
        "default": true,
        "line_length": false
    }
}
