{
  "languageserver": {
    "ccls": {
      "enable": false,
      "command": "ccls",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        ".ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        }
      }
    },
    "clangd": {
      "enable": true,
      "command": "clangd",
      "filetypes": [
        "c",
        "cpp",
        "objc",
        "objcpp"
      ],
      "rootPatterns": [
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "args": [
        "-background-index"
      ]
    }
  }
}
